@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Welcome";
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="bg-blue-800 p-2 shadow text-xl text-white">
        <h3 class="font-bold pl-2">Summary</h3>
    </div>

    <div class="flex flex-wrap">
        <div class="w-full md:w-1/2 xl:w-1/3 p-3">
            <!--Metric Card-->
            <div class="bg-orange-100 border-b-4 border-orange-500 rounded-lg shadow-lg p-5">
                <div class="flex flex-row items-center">
                    <div class="flex-shrink pr-4">
                        <div class="rounded-full p-5 bg-orange-600"><i class="fas fa-users fa-2x fa-inverse"></i></div>
                    </div>
                    <div class="flex-1 text-right md:text-center">
                        <h5 class="font-bold uppercase text-gray-600">Total Users</h5>
                        <h3 class="font-bold text-3xl">249</h3>
                    </div>
                </div>
            </div>
            <!--/Metric Card-->
        </div>
        <div class="w-full md:w-1/2 xl:w-1/3 p-3">
            <!--Metric Card-->
            <div class="bg-indigo-100 border-b-4 border-indigo-500 rounded-lg shadow-lg p-5">
                <div class="flex flex-row items-center">
                    <div class="flex-shrink pr-4">
                        <div class="rounded-full p-5 bg-indigo-600"><i class="fas fa-tasks fa-2x fa-inverse"></i></div>
                    </div>
                    <div class="flex-1 text-right md:text-center">
                        <h5 class="font-bold uppercase text-gray-600">Scans</h5>
                        <h3 class="font-bold text-3xl">7</h3>
                    </div>
                </div>
            </div>
            <!--/Metric Card-->
        </div>
        <div class="w-full md:w-1/2 xl:w-1/3 p-3">
            <!--Metric Card-->
            <div class="bg-red-100 border-b-4 border-red-500 rounded-lg shadow-lg p-5">
                <div class="flex flex-row items-center">
                    <div class="flex-shrink pr-4">
                        <div class="rounded-full p-5 bg-red-600"><i class="fas fa-inbox fa-2x fa-inverse"></i></div>
                    </div>
                    <div class="flex-1 text-right md:text-center">
                        <h5 class="font-bold uppercase text-gray-600">Issues</h5>
                        <h3 class="font-bold text-3xl">3</h3>
                    </div>
                </div>
            </div>
            <!--/Metric Card-->
        </div>
    </div>

    <div class="bg-blue-800 p-2 shadow text-xl text-white">
        <h3 class="font-bold pl-2">How to</h3>
    </div>

    <div class="bg-blue-800 p-2 shadow text-xl text-white">
        <h3 class="font-bold pl-2">Go to scans</h3>
        <h3 class="font-bold pl-2">Search for person</h3>
        <h3 class="font-bold pl-2">Scan and save. Repeat</h3>
    </div>
}
else
{
    <div class="bg-white border-transparent rounded-lg shadow-lg">
        <div class="bg-grey-light border-b-2 border-grey rounded-tl-lg rounded-tr-lg p-2">
            <h5 class="uppercase text-grey-dark">@ViewData["Title"]</h5>
        </div>
        <div class="p-5">
            Tired of keeping stacks of papers around with temperature measurements lying around?
            <br />
            Worried about all the different people handling them? Or losing them?
            <br />
            Submitting random bits of paper weekly quite tedious, I bet?
            <br />
            What if you had to search back in time for a particular record- how would you find it?
            <br />
            There must be an easier way? Oh wait... ;)
            <br />
            covidance => evidence of daily covid compliance checks
        </div>
    </div>
}