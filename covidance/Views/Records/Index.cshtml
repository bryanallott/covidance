@model IEnumerable<covidance.Data.PersonInfo>

@{
    ViewData["Title"] = "To Scan";
}

<div class="bg-blue-800 p-2 shadow text-xl text-white">
    <h3 class="font-bold pl-2">To Scan</h3>
</div>

@if (0 == Model.Count())
{
    <div class="flex flex-wrap">
        <div class="w-full md:w-1/2 xl:w-1/3 p-3">
            <div class="bg-green-100 border-b-4 border-green-600 rounded-lg shadow-lg p-5">
                <div class="flex flex-row items-center">
                    <div class="flex-shrink pr-4">
                        <div class="rounded-full p-5 bg-green-600"><i class="fa fa-smile-wink fa-2x fa-inverse"></i></div>
                    </div>
                    <div class="flex-1 text-right md:text-center">
                        <h5 class="font-bold uppercase text-gray-600">Everybody has been scanned today!</h5>
                        <h3 class="font-bold text-3xl"><span class="text-green-500"><i class="fas fa-thumbs-up"></i></span></h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    foreach (var item in Model.OrderBy(x => x.Name))
    {
    <div class="flex flex-wrap">
        <div class="w-full md:w-1/2 xl:w-1/3 p-3">
            @item.Name <a>Scan</a>
        </div>
    </div>
    }
}