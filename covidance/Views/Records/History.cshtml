@model IEnumerable<covidance.Data.RecordInfo>

@{
    ViewData["Title"] = "History";
}

    <div class="bg-blue-800 p-2 shadow text-xl text-white">
        <h3 class="font-bold pl-2">@ViewBag.Title (<a asp-action="Index">To Scan</a>)</h3>
    </div>

    <div class="flex flex-wrap">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.When)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Temperature)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Symptoms)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RecentContact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sanitised)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bagged)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Reason)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.When)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Temperature)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Symptoms)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RecentContact)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sanitised)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bagged)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Reason)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
